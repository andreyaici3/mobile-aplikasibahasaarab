<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PilihanBabLatihan">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:rotation="180">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:rotationY="180"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/wave" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="start"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/buku1" />

            <LinearLayout
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logoarabputih" />

                <TextView
                    android:textColor="@color/white"
                    android:fontFamily="@font/insanibuu"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APLIKASI PENGENALAN KAIDAH DALAM BAHASA ARAB" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fkom"
                android:background="@drawable/btn_primary"
                android:padding="10dp" />


        </LinearLayout>
    </RelativeLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:orientation="vertical">


        <TextView
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:lineHeight="30dp"
            android:fontFamily="@font/insanibuu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LATIHAN SOAL" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="350dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">

              <ScrollView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

                      <Button

                          android:id="@+id/latihanBab1"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/btn_primary"
                          android:text="BAB 1\n(JAR MAJRUR DENGAN ISIM DHOMIR)"
                          android:theme="@style/myButton"
                          android:textColor="@color/black"
                          android:fontFamily="@font/insanibuu"
                          android:textSize="14dp" />


                      <Button
                          android:theme="@style/myButton"
                          android:id="@+id/latihanBab2"
                          android:layout_marginTop="20dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/btn_primary"
                          android:text="BAB 2\n(JAR MAJRUR DENGAN ISIM MAQSUR)"
                          android:textColor="@color/black"
                          android:fontFamily="@font/insanibuu"
                          android:textSize="14dp" />

                      <Button
                          android:theme="@style/myButton"
                          android:id="@+id/latihanBab3"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="20dp"
                          android:background="@drawable/btn_primary"
                          android:fontFamily="@font/insanibuu"
                          android:text="BAB 3\n(JAR MAJRUR DENGAN ISIM MANQUS)"
                          android:textColor="@color/black"
                          android:textSize="14dp" />

                      <Button
                          android:theme="@style/myButton"
                          android:id="@+id/latihanBab4"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="20dp"
                          android:background="@drawable/btn_primary"
                          android:fontFamily="@font/insanibuu"
                          android:text="BAB 4\n(JAR MAJRUR DENGAN ISIM MUTSANNA)"
                          android:textColor="@color/black"
                          android:textSize="14dp" />

                      <Button
                          android:theme="@style/myButton"
                          android:id="@+id/latihanBab5"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="20dp"
                          android:background="@drawable/btn_primary"
                          android:fontFamily="@font/insanibuu"
                          android:text="BAB 5\n(JAR MAJRUR DENGAN JAMAK MUDZAKAR SALIM)"
                          android:textColor="@color/black"
                          android:textSize="14dp" />

                      <Button
                          android:theme="@style/myButton"
                          android:id="@+id/latihanBab6"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="20dp"
                          android:background="@drawable/btn_primary"
                          android:fontFamily="@font/insanibuu"
                          android:text="BAB 6\n(JAR MAJRUR DENGAN MAMNUâ€™ MINA ASH-SHORF)"
                          android:textColor="@color/black"
                          android:layout_marginBottom="10dp"
                          android:textSize="14dp" />

                  </LinearLayout>

              </ScrollView>

          </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:theme="@style/myButton"
            android:id="@+id/btnLatihanSoalKembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_primary"
            android:text="KEMBALI"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/insanibuu"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:rotationY="180"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/wave" />



    </LinearLayout>



</RelativeLayout>