<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrapperMateri"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:paddingTop="20dp"
    android:paddingLeft="30dp"
    android:paddingBottom="20dp"
    android:paddingRight="30dp"
    android:layout_height="350dp">

    <ScrollView
        android:id="@+id/isiDhomir"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/judulMateri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="جار و مجرور في جمع المذكر السالم" />

            <TextView
                android:id="@+id/subJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="KETERANGAN PELAJARAN\nJAR DAN MAJRUR DALAM JAMAK MUDZAKAR SALIM" />

            <TextView
                android:textSize="14dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Arti Jamak Mudzakar Salim : Bilangan lebih dari dua untuk mudzakar"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Kaidahnya : Untuk manusia dan sifatnya"
                android:textColor="@color/black" />

            <TextView
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Rumusnya"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a. Ditambah huruf wawu dan nun (marfu’)"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="b. Ditambah huruf ya dan nun (majrur)"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="c. Harokat huruf nun selalu fathah"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="d. Sebelum huruf ya berharokat kasroh"
                android:textColor="@color/black" />

            <TextView
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. I’robnya"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a. Alamat marfu’nya dengan wawu"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="b. Alamat majrurnya dengan ya"
                android:textColor="@color/black" />

            <TextView
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Kaidah Mubtada dan Khobar	: Harus sama bilangannya"
                android:textColor="@color/black" />

            <TextView
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Contoh perbedaan jamak mudzakar salim yang marfu’ dan majrur"
                android:textColor="@color/black" />

            <TableLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="المسلمُونَ = مرفوع"
                        android:textSize="14dp"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="#FFFFFF"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="="
                        android:textSize="14dp"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="#FFFFFF"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="المسلمُونَ في المسجدِ"
                        android:textSize="14dp"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="#FFFFFF"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textSize="14dp"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="#FFFFFF"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        />

                </TableRow>

                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="المسلمِينَ  = مجرور"
                        android:textSize="14dp"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="#FFFFFF"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="="
                        android:textSize="14dp"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="#FFFFFF"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="المسجدُ للمسلمِينَِ"
                        android:textSize="14dp"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="#FFFFFF"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:textSize="14dp"
                        android:layout_margin="1dp"
                        android:layout_column="0"
                        android:background="#FFFFFF"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        />

                </TableRow>

            </TableLayout>

            <ImageView
                android:id="@+id/playDhomir"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/ic_sound" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
